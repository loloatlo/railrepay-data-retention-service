# Service Identity
SERVICE_NAME=data-retention-service
DATABASE_SCHEMA=data_retention
PORT=3000
NODE_ENV=production

# PostgreSQL (Railway)
DATABASE_URL=postgresql://postgres:password@localhost:5432/railrepay
PGHOST=localhost
PGPORT=5432
PGDATABASE=railrepay
PGUSER=postgres
PGPASSWORD=password
PGSSLMODE=prefer

# GCS (for archive cleanup)
GCS_CREDENTIALS_BASE64=
GCS_GTFS_ARCHIVE_BUCKET=railrepay-gtfs-archive

# Observability
ALLOY_PUSH_URL=
LOKI_BASIC_AUTH=
LOG_LEVEL=info

# Retention Configuration
DEFAULT_RETENTION_DAYS=31
